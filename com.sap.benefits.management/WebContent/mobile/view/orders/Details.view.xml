           setDisplayBlock="true">
    <Page id="EmployeeOrdersPage" title="Employee Orders" showNavButton="false">
        <content>        
        	<VBox>
        		<items>
        			<ObjectHeader title="Available points" number="{ordersModel>/employee/availablePoints}">        			
        				<attributes>
        					<ObjectAttribute text="Total points {ordersModel>/employee/totalPoints}"></ObjectAttribute>
        					<ObjectAttribute text="Used points ,,,"></ObjectAttribute>
        				</attributes>
        				<firstStatus>
        					<ObjectStatus text="Item added" state="Success"></ObjectStatus>
        				</firstStatus>
        				<secondStatus >
        					<ObjectStatus text="Wrong quantity" icon="sap-icon://error" state="Error"></ObjectStatus>
        				</secondStatus >        				
        			</ObjectHeader>
        		</items>
        	</VBox>
        
	        <List items="{path:'ordersModel>/employee/orders', sorter: [{path: 'ordersModel>itemId', group: '.itemGrouping'}]}" inset="true" headerText="Orders for Campaign" footerText="Whole value">
	        	<items>
	        		<ObjectListItem icon="sap-icon://{ordersModel>icon}" title="{ordersModel>type}" number="{ordersModel>quantity}">	        		
	        			<firstStatus>
	                           <ObjectStatus text="value: {path:'ordersModel>quantity'}*{path:'ordersModel>value'}"/>
	                    </firstStatus>
	        		</ObjectListItem>
	        	</items>        	
	        </List>
	        
	        <Bar>
	        	<contentRight>
	        		<Button text="Add Item" icon="sap-icon://add" press=".addItem"></Button>
	        	</contentRight>
	        </Bar>
	        
