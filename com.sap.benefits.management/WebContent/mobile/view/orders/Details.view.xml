<core:View xmlns:core="sap.ui.core" 
           xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.commons.form" xmlns:common="sap.ui.commons"
           controllerName="com.sap.benefits.management.view.orders.Details" 
           xmlns:html="http://www.w3.org/1999/xhtml"
           setDisplayBlock="true">
    <Page id="EmployeeOrdersPage" title="Employee Orders" showNavButton="false">
        <content>        
        	<VBox>
        		<items>
        			<ObjectHeader title="Available points" number="{orderDetailsModel>/employee/availablePoints}">        			
        				<attributes>
        					<ObjectAttribute text="Total points {orderDetailsModel>/employee/totalPoints}"></ObjectAttribute>
        					<ObjectAttribute text="{parts:[{path:'orderDetailsModel>/employee/availablePoints'}, {path:'orderDetailsModel>/employee/totalPoints'}], formatter:'.usedPoints'}"></ObjectAttribute>
        				</attributes>	
        			</ObjectHeader>
        		</items>
        	</VBox>
        
	        <List items="{path:'orderDetailsModel>/employee/orders', sorter: [{path: 'orderDetailsModel>itemId', group: '.itemGrouping'}]}" inset="true" headerText="Orders for Campaign" footerText="Whole value">
	        	<items>
	        		<ObjectListItem icon="sap-icon://{ordersModel>icon}" title="{orderDetailsModel>type}" number="{orderDetailsModel>quantity}" numberUnit="quantity">	        		
	        			<firstStatus>
	                           <ObjectStatus text="{parts:[{path:'orderDetailsModel>quantity'}, {path:'orderDetailsModel>type'}], formatter:'.wholeValue'}"/>	                                   
	                    </firstStatus>
	        		</ObjectListItem>
	        	</items>        	
	        </List>
        </content>
        
        <footer>
	        <Bar>
	        	<contentRight>
	        		<Button text="Add Item" icon="sap-icon://add" press="addItem"></Button>
	        	</contentRight>
	        </Bar>        
        </footer>
    </Page>
         
    <Dialog id="addItemCtrl" title="Add New Item">
    	<content>
    		<form:SimpleForm id="inputForm" minWidth="1024" maxContainerCols="2" editable="false">
                <form:content>
                    <!-- <common:Title text="Campaign Information"/>  -->
                    <Label text="benefit type"/>
                    <Select id="benefitTypeSelect" type="sap.m.InputType.Text"> <!--  items="{path:'benefitsModel>/benefits'}" selectedItemId="1" -->
	    					<items>
	    						<core:Item id="benItem1" key="SXP" text="Sodexo Pass"/>
	    						<core:Item id="benItem2" key="TRP" text="Trapeza Pass"/>
	    					</items>
	    			</Select>
                    <Label text="quantity type"/>
    				<Select id="quantityTypeSelect" type="sap.m.InputType.Text">
    					<items>
    						<core:Item id="quantItem1" key="2lv" text="2 lv"/>
    						<core:Item id="quantItem2" key="5lv" text="5 lv"/>
    						<core:Item id="quantItem3" key="10lv" text="10 lv"/>
    						<core:Item id="quantItem4" key="20lv" text="20 lv"/>
    					</items>
    				</Select>
	    			<Label text="quantity"/>
	    			<Input id="quantityTypeTxt" type="Number" placeholder="Enter amount"></Input>
                </form:content>
            </form:SimpleForm>
    </content>
    </Dialog>
</core:View>