<core:View xmlns:core="sap.ui.core" 
           xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
           controllerName="com.sap.hana.cloud.samples.benefits.view.employees.Master" 
           xmlns:html="http://www.w3.org/1999/xhtml"
           setDisplayBlock="true">
    <Page id="EmployeesMasterPage" title="Managed employees" scrollToLoad="false" showNavButton="true" navButtonTap="onNavPressed">
        <content>
            <GrowingList id="employeesList" threshold="6" items="{/}" includeItemInSelection="true" mode="SingleSelectMaster" select="onItemSelected">
                <items>
                    <ObjectListItem title="{firstName} {lastName}" number="{activeCampaignBalance/availablePoints}" numberUnit="Unused Points" class="listItem">
                        <attributes>
                            <ObjectAttribute text="{email}"/>  
                        </attributes>
                    </ObjectListItem>                  
                </items>
            </GrowingList>
        </content>
        <subHeader>
            <Bar id="searchBar" enableFlexBox="true">
                <contentMiddle>
                    <SearchField id="searchField" search="handleSearch" liveChange="handleSearch" width="100%" placeholder="Search..." showRefreshButton="false">
                        <layoutData>
                            <FlexItemData growFactor="1"/>
                        </layoutData>
                    </SearchField>
                </contentMiddle>
            </Bar>
        </subHeader>
    </Page>
</core:View>