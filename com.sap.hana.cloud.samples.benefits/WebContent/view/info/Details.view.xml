<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="com.sap.hana.cloud.samples.benefits.view.info.Details"
	xmlns:html="http://www.w3.org/1999/xhtml" setDisplayBlock="true">

	<Page title="{b_i18n>INFO_PAGE_NAME}" showNavButton="true" navButtonTap="onNavPressed">
		<headerContent>
			<Button id="logoutButton" press="logoutButtonPressed" icon="sap-icon://log" text="{b_i18n>LOGOUT}" />
		</headerContent>
	
		<content>

			<ObjectHeader title="{/d/results/0/firstName} {/d/results/0/lastName}">
				<attributes>
					<ObjectAttribute text="{/d/results/0/title}, {/d/results/0/department}, {/d/results/0/division}" />
					<ObjectAttribute text="{/d/results/0/location}" />
					<ObjectAttribute text="{/d/results/0/businessPhone}" class="phoneIcon" />
				</attributes>
			</ObjectHeader>
			<ObjectHeader id="hrObjectHeader" title="{b_i18n>HR_MANAGER_HEADER}">
				<attributes>
					<ObjectAttribute text="{/d/results/1/firstName} {/d/results/1/lastName}" class="personIcon" />
					<ObjectAttribute text="{/d/results/1/businessPhone}" class="phoneIcon" />
				</attributes>
			</ObjectHeader>

		</content>
	</Page>
	
</core:View>